<UserControl x:Class="UI.UserControls.CardPanels.TextCardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.UserControls.CardPanels"
             mc:Ignorable="d" 
             d:DesignHeight="100" 
             d:DesignWidth="300"
             MinWidth="300"
             MinHeight="100"
             DataContext="{Binding TextCardPanel, Source={StaticResource Locator}}">

    <Border Background="{StaticResource Gray}" BorderBrush="{StaticResource LightGray2}" BorderThickness="1 0 0 1" CornerRadius="0 0 0 15">

        <TextBlock
            FontFamily="/Styles/Fonts/#Maven Pro - Black.ttf"
            FontSize="12"
            Foreground="{StaticResource LightGray}"
            Margin="10"
            TextWrapping="Wrap"
            Text="{Binding Text}" 
        />

    </Border>
    
</UserControl>
