<UserControl x:Class="UI.UserControls.DrawConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.UserControls" 
             d:DataContext="{d:DesignInstance Type=local:DrawConnection}"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid>

        <Path Data="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:DrawConnection}}, Path=LineData}" Stroke="{StaticResource Blue}" StrokeThickness="1"/>
        <Path Data="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:DrawConnection}}, Path=ArrowData}" Fill="{StaticResource Blue}" Stroke="{StaticResource Blue}" StrokeThickness="1"/>

    </Grid>

</UserControl>
