<Application x:Class="UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d"
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ViewModels.Navigation;assembly=ViewModels"
             ShutdownMode="OnMainWindowClose">
    
    <Application.Resources>

        <ResourceDictionary>

            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />
            
            <BitmapImage x:Key="CursorHorizontalMove" UriSource="Icons/CursorHorizontalMove.png" />

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Styles/Colors.xaml" />

                <ResourceDictionary Source="Styles/NotesStyles.xaml" />

                <ResourceDictionary Source="Styles/CardStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>
</Application>
