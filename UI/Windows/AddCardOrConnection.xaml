<Window x:Class="UI.Windows.AddCardOrConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Windows"
        mc:Ignorable="d"
        Title="AddCardOrConnection"
        Height="250"
        Width="300"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner">

    <Grid Background="{StaticResource Gray}">

        <Button Command="{Binding Close}" VerticalAlignment="Bottom" IsHitTestVisible="True" Style="{StaticResource CardButton}" Content="Accept" FontFamily="/Styles/Fonts/#Maven Pro - Black.ttf" Background="{StaticResource OpacityGreen}" BorderBrush="{StaticResource Green}" Foreground="{StaticResource Green}" />

    </Grid>
</Window>
